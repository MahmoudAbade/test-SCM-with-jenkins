// Jenkinsfile
def gv

pipeline {
    agent any
    parameters {
        choice(
            name: 'BRANCH_VERSION',
            choices: ['1.1', '1.2', '1.3', '2.0', '2.1'],
            description: 'Select the branch version to build'
        )
        booleanParam(
            name: 'RUN_TESTS',
            defaultValue: true,
            description: 'Whether to run tests after build'
        )
    }
    stages {
        stage('Init') {
            steps {
                script {
                    // Load the functions from the file
                    gv = load "scripts.groovy"
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    // Pass the parameter explicitly
                    gv.buildApp(params.BRANCH_VERSION)
                }
                // Add your actual build steps here
            }
        }
        stage('Test') {
            when {
                expression { params.RUN_TESTS }
            }
            steps {
                script {
                    // Pass the parameter explicitly
                    gv.testApp(params.BRANCH_VERSION)
                }
                // Add your actual test steps here
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Pass the parameter explicitly
                    gv.deployApp(params.BRANCH_VERSION)
                }
                // Add your actual deploy steps here
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}